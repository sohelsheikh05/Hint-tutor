
{
"manifest_version": 3,
"name": "HintTutor",
"version": "1.0",
"description": "Highlight questions and get hint-by-hint tutoring from an AI.",
"permissions": [
"contextMenus",
"storage",
"activeTab",
"scripting"
],
"host_permissions": ["<all_urls>"],
"background": {
"service_worker": "background.js"
},
"action": {
"default_popup": "popup.html",
"default_title": "HintTutor"
},
"icons": {
"16": "icons/icon16.png",
"48": "icons/icon48.png",
"128": "icons/icon128.png"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content.js"]
}
]
}